<!DOCTYPE html>
<html lang="en">
	<%- include('partials/header', {title}) %>
	<body>
		<%- include('partials/nav') %>
		<main>
			<h1><%= title %></h1>
			<a href="/potions/add">Add potion</a>
			<hr />
			<% if(items.length === 0) { %>
			<p>No items... Items with potions category will show here</p>
			<% } %> <% items.forEach(item => { %>
			<div class="itemCard">
				<h2><a href="<%= item.url %>"><%= item.name %></a></h2>
				<p>Description: <%= item.description %></p>
				<p>Category: <%= item.category %></p>
				<p>Stock: <%= item.stock %></p>
				<p>Price: <%= item.formattedPrice %></p>
			</div>
			<% }) %>
		</main>
	</body>
</html>
